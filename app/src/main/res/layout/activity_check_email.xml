<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckEmail">

    <ImageView
        android:id="@+id/iv_checkemail"
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_emailcheck" />

    <TextView
        android:id="@+id/tv_checkemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkemail"
        android:textSize="24sp"
        android:textColor="#6E9E08"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_checkemail" />

    <TextView
        android:id="@+id/tv_we_have_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wehavesend"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#394C0E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_checkemail" />
</androidx.constraintlayout.widget.ConstraintLayout>